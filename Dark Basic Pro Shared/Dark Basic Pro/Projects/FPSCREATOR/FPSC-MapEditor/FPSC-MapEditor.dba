 endif
 if p=1
  if flip=0
   set vertexdata uv (p*4)+0,u#+s#,v#
   set vertexdata uv (p*4)+1,u#,v#
   set vertexdata uv (p*4)+2,u#,v#+s#
   set vertexdata uv (p*4)+3,u#+s#,v#+s#
  else
