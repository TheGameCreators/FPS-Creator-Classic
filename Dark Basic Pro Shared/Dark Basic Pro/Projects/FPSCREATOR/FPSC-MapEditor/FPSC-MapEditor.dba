         gosub _gridedit_erasesingletile
        endif
       endif
      endif
      `
     next twidthx
    next twidthy
    `
   endif
   `
  endwhile
  `
  rem Hide unused art objects
  editormarkeroffsethidefrom=tobj
  while tobj<=editormarkeroffsetmax
   hide object tobj : inc tobj
  endwhile
  `
  rem end draw phase
  if selstage=2
   selstage=0 : selstagemode=0
  endif
  `
