 mapid = mapid + (ground << 14)
 mapid = mapid + (rotate << 12)
 mapid = mapid + (orient << 10)
 mapid = mapid + (symbol << 4)
 mapid = mapid + (side)
 buffermap(layer,mx,my)=mapid
endfunction

